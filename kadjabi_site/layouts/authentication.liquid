<!DOCTYPE html>
<html lang="en">
<head>
    {% csrf_meta_tags %}
    <title>
        {% if page_title %}
            {{ page_title }}
        {% else %}
            {{ current_site.title }}
        {% endif %}
    </title>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    {% include "social_meta_tags" %}
    <link href="{{ 'favicon.png' | asset_url }}?v=2" rel="shortcut icon" />
    <link rel="canonical" href="{{ canonical_url }}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    {% if settings.font_family ==  settings.heading_font_family%}
        <link href="//fonts.googleapis.com/css?family={{ settings.font_family | replace: ' ', '+' }}:300,400,600,700,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">
    {% else %}
        <link href="//fonts.googleapis.com/css?family={{ settings.font_family | replace: ' ', '+' }}:300,400,600,700,300italic,400italic,600italic,700italic|{{ settings.heading_font_family | replace: ' ', '+' }}:300,400,600,700,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">
    {% endif %}
    {{ 'styles.css' | asset_url | stylesheet_tag }}
    {{ 'galileo.css' | asset_url | stylesheet_tag }}
    {% content_for_header %}
</head>
<body class="auth" style="background-image: url('{{ "login_bg.jpg" | asset_url }}');">
<div class="auth-overlay"></div>
<div class="auth-wrapper">
    {{ content_for_layout }}
</div>
{{ 'core.js' | kajabi_asset_url | script_tag }}
{{ 'scripts.js' | asset_url | script_tag }}
</body>
</html>